<main class='container-fluid'>


<section class="banner" style="background-image: url(<%=@blog.img%>)">
<div class="overlay text-light">
<div>
<h1 class="display-1"><%= @blog.title%></h1>
<p class="display-5"><%= @blog.location%></p>
<p class="display-5"><%= @blog.country%></p>
<p class="display-5">Budget: $<%= @blog.budget%> AUD</p> <%#TODO%>
<p class="display-5">Activity: <%= @blog.activity%></p>
<button type="button" class="btn btn-success"><a href="#content">Start Reading</a></button>
</div>
</div>
</section>
<h2 id="content"><%= @blog.title%></h2>
<p><%= @blog.content%></p>
<p>This post was created on:
<%= @blog.created_at%>
</p>
<button type="button" class="btn btn-outline-primary"><%=link_to("Back to Home Page", root_path) %></button>
<button type="button" class="btn btn-warning"><%=link_to("Edit Blog Post", edit_blog_path(@blog)) %></button>
<button type="button" class="btn btn-danger"><%= link_to 'Delete Blog Post', blog_path(@blog), method: 'delete', data: { confirm: "Are you sure you want to delete #{@blog[:title]} blog?"} %></button>

<hr>
<h2>Comments</h2>


<% @blog.comments.each do |comment| %>
    <p><%= comment.name %> says:</p>
    <p>"<%= comment.content %>"</p>
    <p>on <%= comment.created_at %></p>
    <p><%= link_to 'Delete Comment', [comment.blog, comment], method: 'delete', data: { confirm: "Are you sure you want to delete this comment?"} %></p>
    <hr>
<%end%>


<%= form_with(model: [ @blog, @blog.comments.build], local: true) do |f| %>
    <%=f.label :name, "Please provide your name:" %>
    <%= f.text_field :name, size: '30'%>

    <%=f.text_area :content, size: '30x6'%>

    <%= f.submit "Create Comment" %>
<%end%>
</main>