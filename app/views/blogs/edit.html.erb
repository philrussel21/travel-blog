<div class="container-fluid">

<div class="row justify-content-center">

<%= form_with(model: @edit_blog, local: true, html: {class: 'col-4 p-3 mb-2 bg-light text-dark'}) do |f|%>
<button type="button" class="btn btn-outline-primary"><%=link_to("Back to Blog Page", blog_path(@edit_blog)) %></button>

<h1>Edit Post</h1>
<% if @edit_blog.errors.any? %>
  <div id="error_explanation"> 
    <ul>
    <% @edit_blog.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>


  <%= render 'form', f: f %>

  <%=f.submit "Update Post", class: "btn btn-warning"%>


<%end%>